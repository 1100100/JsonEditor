{
    "name": "JsonEditor",
    "version": "1.0.1",
    "description": "Json Editor",
    "main": "src/main.js",
    "scripts": {
        "start": "electron .",
        "dist": "electron-builder",
        "pack": "electron-packager ./src/ --overwrite -all"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/1100100/StringTools.git"
    },
    "author": "OWEN",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/1100100/StringTools/issues"
    },
    "homepage": "https://github.com/1100100/StringTools#readme",
    "devDependencies": {
        "electron": "^8.0.0",
        "electron-packager": "^14.2.1"
    },
    "dependencies": { "electron": "^8.0.0" },
    "build": {
        "appId": "com.cilent.app.JsonEditor",
        "productName": "Json Editor",
        "compression": "store",
        "directories": {
            "output": "./build"
        },
        "files": ["src/", "!src/lib/vue/vue.dev.js"],
        "asar": true,
        "win": {
            "icon": "logo.ico"
        },
        "nsis": {
            "oneClick": false,
            "guid": "99b04ff9-e584-4dfa-a6ee-ff43da4c7df0",
            "perMachine": true,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true,
            "installerIcon": "logo.ico",
            "uninstallerIcon": "logo.ico",
            "installerHeaderIcon": "logo.ico",
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "Json Editor"
        }
    }
}