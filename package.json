{
    "name": "stringtools",
    "version": "1.0.0",
    "description": "string tools",
    "main": "src/main.js",
    "scripts": {
        "dist": "electron-builder",
        "pack": "electron-packager ./src/ --overwrite -all"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/1100100/StringTools.git"
    },
    "author": "owen",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/1100100/StringTools/issues"
    },
    "homepage": "https://github.com/1100100/StringTools#readme",
    "devDependencies": {
        "electron": "^8.0.0",
        "electron-packager": "^14.2.1"
    },
    "dependencies": {},
    "build": {
        "appId": "com.cilent.app.electronbuild",
        "productName": "JSON Editor",
        "compression": "store",
        "directories": {
            "output": "./build"
        },
        "files": ["./src"],
        "asar": false,
        "win": {
            "icon": "src/resources/images/logo.ico"
        },
        "nsis": {
            "oneClick": false,
            "guid": "xxxx",
            "perMachine": true,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true,
            "installerIcon": "src/resources/images/logo.ico",
            "uninstallerIcon": "src/resources/images/logo.ico",
            "installerHeaderIcon": "src/resources/images/logo.ico",
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "xxxx"
        }
    }
}